{
  "`n`ame": "nest-boilerplate",
  "version": "1.0.1",
  "description": "Nest boilerplate repository",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc --build src/tsconfig.prod.json",
    "db:sync": "npm run typeorm -- schema:drop && npm run typeorm -- schema:sync",
    "db:migration:up": "npm run typeorm -- migration:run",
    "db:migration:down": "npm run typeorm -- migration:revert",
    "db:sync:test": "cross-env NODE_ENV=test npm run db:sync",
    "db:migration:up:test": "cross-env NODE_ENV=test npm run db:migration:up",
    "db:migration:down:test": "cross-env NODE_ENV=test npm run db:migration:down",
    "lint": "tslint -p src/",
    "test": "jest --config=jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:e2e": "jest --config=test/e2e/jest-e2e.js",
    "test:e2e:watch": "npm run test -- --watch",
    "typeorm": "cross-env TYPEORM_CLI=true ts-node ./node_modules/typeorm/cli.js",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "start:test": "cross-env NODE_ENV=test node dist/main.js",
    "pre-commit-msg": "echo \"Pre commit checking...\""
  },
  "pre-commit": [
    "pre-commit-msg",
    "lint",
    "test",
    "test:e2e"
  ],
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/microservices": "^6.1.1",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-fastify": "^6.1.1",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.0",
    "@nestjs/websockets": "^6.1.1",
    "@nestjsx/crud": "^3.2.0",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "fastify-swagger": "^2.3.2",
    "mysql2": "^1.6.5",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pino-pretty": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "typeorm": "^0.2.17",
    "typeorm-naming-strategies": "^1.0.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.1.1",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.11.0",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "3.4.5"
  }
}
